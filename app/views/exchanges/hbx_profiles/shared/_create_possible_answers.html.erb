  <div class='container' id= 'custom-answer-type'>
  <h5>Please input three possible options for answers to this question</h5>
  <%=fields_for @answer, method: "post", class: "form" do |s| %>
    <table class="table table-border" id="custom-sep-container" >
      <tbody>
          <p> <%=s.text_field :option_1, class:'form-control' %></p>
          <p> <%=s.text_field :option_2, class:'form-control' %></p>
          <p> <%=s.text_field :option_3, class:'form-control' %></p>
      </tbody>
    </table>
    <div class="row no-buffer child-row">
        <%= s.submit "Create Possible Answers", :class => "btn btn-primary", id: "qle-question-submit", :size => '100px', onclick: "updateAnswer()"%>
    </div>
  <% end %>
  </div>

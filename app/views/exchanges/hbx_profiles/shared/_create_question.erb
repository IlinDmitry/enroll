  <%= fields_for @question, method: "post", class: "form" do |q| %>
        <span> <%= q.text_field :content, class: "form-control", id: "qle-question-form", required: true, placeholder: 'Question', autocomplete: :off %> </span>
          <div class = 'container' id='custom-answer-type'>
          <h5>Please select the type of answer that is allowed for this question</h5>
          <%= fields_for @answer, method: "post", class: "form" do |s| %>
            <% ["Date", "Multiple Choice", "True/False"].each do |c| %>
              <p> <%=label_tag "#{c}"%> <%= check_box_tag "answer[type]", "#{c}"%></p>
            <% end %>
            <tr>
              <td> <%= render partial: "exchanges/hbx_profiles/shared/create_possible_answers"%></td>
              <td><%= render partial: "exchanges/hbx_profiles/shared/create_boolean_answers"%></td>
              <td><%= render partial: "exchanges/hbx_profiles/shared/create_date_answers"%></td>
            </tr>
          <% end %>
          </div>
  <% end %>

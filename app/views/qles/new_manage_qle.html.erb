 <div class="container" style="padding-top: 1px">
  <div class='row'>
    <div class='col-md-9'>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <center><strong>Manage QLE</strong></center>
        </div>
          <div class="panel-body">
            <%= form_for @manage_qle, as: :manage_qle, url: create_manage_qle_qles_path, method: :post do |f| %>
              <div class="radio_option">
                <div>
                  <%= radio_button_tag "market_kind", "#{f.object.market_kind}", value: true, class: "required floatlabel"  %>
                  <label><span>Creating a custom QLE's</span></label>
                </div>
                <br/>
              <div>
                <%= radio_button_tag "market_kind", "#{f.object.market_kind}", value: true, class: "required floatlabel"  %>
                <label><span>EDIT active QLE's</span></label>
              </div>
              <div>
                <%= select_tag("which_qle_kind", options_for_select(QualifyingLifeEventKind.all.collect { |qle| [qle.title, qle.id] }.unshift(["Select QLE to modify", nil])))%>
              </div>
              <br/>
              <div>
                <%= radio_button_tag "market_kind", "#{f.object.market_kind}", value: true, class: "required floatlabel"  %>
                <label><span>Deactivate active QLE's</span></label>
              </div>
              <div>
                <%= select_tag("which_qle_kind", options_for_select(QualifyingLifeEventKind.all.collect { |qle| [qle.title, qle.id] }.unshift(["Select QLE to deactivate", nil])))%>
              </div>
              <br/>
              <div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
